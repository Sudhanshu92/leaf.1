<%= form_for @hospital, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :encrypted_password, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :encrypted_password, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reset_password_token, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :reset_password_token, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :reset_password_sent_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :reset_password_sent_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :remember_created_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :remember_created_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sign_in_count, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :sign_in_count, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_sign_in_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :current_sign_in_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_sign_in_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :last_sign_in_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current_sign_in_ip, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :current_sign_in_ip, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_sign_in_ip, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_sign_in_ip, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  hospitals_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
