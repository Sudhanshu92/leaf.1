<%- model_class = Hospital -%>
<div class="page-header">
  <h1><%=t '.title', :default => Hospital %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:encrypted_password) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.encrypted_password %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reset_password_token) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.reset_password_token %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:reset_password_sent_at) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.reset_password_sent_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:remember_created_at) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.remember_created_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:sign_in_count) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.sign_in_count %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_at) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.current_sign_in_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_at) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.last_sign_in_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:current_sign_in_ip) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.current_sign_in_ip %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:last_sign_in_ip) %></dt>
      <dd><pre class="prettyprint"><%= @hospital.last_sign_in_ip %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              hospitals_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_hospital_path(@hospital), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              hospital_path(@hospital),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

